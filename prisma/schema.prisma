datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  id        Int       @id @default(autoincrement())
  plate     String    @unique
  model     String
  brand     String?
  year      Int?
  createdAt DateTime  @default(now())

  expenses  Expense[]
}

model Expense {
  id             Int       @id @default(autoincrement())
  colaborador    String
  vehicleId      Int
  vehicle        Vehicle   @relation(fields: [vehicleId], references: [id])  // ‚Üê VOLTOU!

  tipoGasto      String
  kmInicial      Int?
  kmFinal        Int?
  kmRodados      Int?
  horaInicial    String?
  horaFinal      String?
  horasMovimento String?
  dia            DateTime
  observacao     String?
  createdAt      DateTime @default(now())
}
